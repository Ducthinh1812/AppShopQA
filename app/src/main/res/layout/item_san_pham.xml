<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    android:background="#bc8f8f"
    android:id="@+id/cVsnpham">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background=" #f2f2f2"

        android:orientation="horizontal">
        <LinearLayout

            android:layout_width="380dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:background="#f2f2f2"
                android:id="@+id/imgQLSP"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background" />
            <LinearLayout
                android:background="#ffff"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="220dp"
                android:layout_height="match_parent">

                <TextView
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:id="@+id/tvTenQLSP"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:text="Tên sản phẩm"/>

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvGiaQLSP"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:textColor="#ff0000"
                    android:text="Giá :"/>

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvQLSLSP"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="18sp"
                    android:textColor="#404040"
                    android:text="Số lượng :"/>

                <TextView
                    android:layout_marginBottom="5dp"

                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvMoTaQLSP"
                    android:layout_width="match_parent"
                    android:textColor="#404040"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="Mô tả:"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgXoaSP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:src="@android:drawable/ic_menu_delete" />

                    <ImageView
                        android:id="@+id/imgSuaSP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_edit" />

                </LinearLayout>

                <ImageView
                    android:layout_marginTop="40dp"
                    android:id="@+id/imgXoaSP"
                    android:src="@android:drawable/ic_menu_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imgSuaSP"
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
